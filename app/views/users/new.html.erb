<div class= "ui segment aligned header" id="page">
<h1 class="ui orange center aligned header"><em>Sign Up</em></h1>
<h4 class="ui orange center aligned medium icon header">
  <i class="circular orange power off icon"></i>
</h4>

<div class="ui raised placeholder segment" id="first-box">
    <div class="ui one column very relaxed stackable grid ">
    <div class="column">
        <%=form_with(model: @user,  local: true) do |form| %>
        <div class="field">
            <%= form.label :username, "Username" %>
            <div class="ui left icon input">
            <%= form.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
            </div>
        </div>
        <div class="field">
        <%= form.label :password, "Password" %>
            <div class="ui left icon input">
            <%= form.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
            </div>
        </div>
        <%= form.submit "Sign Up", class:"ui orange submit button" %>
        <% end %>
    </div>
</div>
</div>